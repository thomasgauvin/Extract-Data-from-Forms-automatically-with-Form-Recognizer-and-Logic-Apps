                        "requestUri": "[concat('https://management.azure.com:443/subscriptions/c149b512-8770-43bb-9773-d871b33a8181/resourceGroups/contoso-fr-extraction-process/providers/Microsoft.Web/connections/', parameters('connections_azureblob_name'), '/extensions/proxy/testconnection?api-version=2016-06-01')]",
